  "capabilities": {
    "tools": [
      {
        "name": "create_workbook",
        "description": "Create new Excel workbooks with templates and multiple sheets",
        "parameters": ["filepath", "sheet_names", "template_data"],
        "category": "creation"
      },
      {
        "name": "open_workbook", 
        "description": "Open workbooks with intelligent caching",
        "parameters": ["filepath", "read_only", "use_cache"],
        "category": "access"
      },
      {
        "name": "read_cell",
        "description": "Read cells with formatting information",
        "parameters": ["filepath", "sheet_name", "cell", "include_formatting"],
        "category": "data"
      },
      {
        "name": "write_cell",
        "description": "Write cells with advanced formatting",
        "parameters": ["filepath", "sheet_name", "cell", "value", "formatting"],
        "category": "data"
      },
      {
        "name": "read_range",
        "description": "Read ranges with statistical analysis",
        "parameters": ["filepath", "sheet_name", "range_ref", "values_only"],
        "category": "data"
      },
      {
        "name": "write_range",
