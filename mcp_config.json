      },
      {
        "name": "delete_worksheet",
        "description": "Delete worksheets with backup option",
        "parameters": ["filepath", "sheet_name", "backup"],
        "category": "structure"
      },
      {
        "name": "analyze_data",
        "description": "Perform comprehensive data analysis",
        "parameters": ["filepath", "sheet_name", "range_ref"],
        "category": "analysis"
      },
      {
        "name": "batch_operations",
        "description": "Execute multiple operations efficiently",
        "parameters": ["operations"],
        "category": "performance"
      },
      {
        "name": "list_files",
        "description": "List Excel files with statistics",
        "parameters": ["pattern", "include_stats"],
        "category": "management"
      },
      {
        "name": "server_status",
        "description": "Get comprehensive server status",
